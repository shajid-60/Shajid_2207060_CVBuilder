<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.shajid.app.shajid2207060.controller.FormController"
            prefHeight="650" prefWidth="900">

    <!-- HEADER -->
    <top>
        <VBox alignment="CENTER" spacing="5" BorderPane.alignment="CENTER">
            <Label text="CV Information Form"
                   style="-fx-font-size: 26px; -fx-font-weight: bold;" />
            <Label text="Enter your details below to generate your CV"
                   style="-fx-font-size: 14px; -fx-text-fill: #666;" />
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true">
            <VBox spacing="25" style="-fx-padding: 30; -fx-background-color: linear-gradient(to bottom right, #ffffff, #5ca6ff)">

                <VBox spacing="10">
                    <Label text="Personal Information"
                           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;" />
                    <GridPane hgap="20" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="75"/>
                        </columnConstraints>

                        <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                               style="-fx-font-size: 14px;" />
                        <TextField fx:id="fullNameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                               style="-fx-font-size: 14px;" />
                        <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                        <Label text="Phone Number:" GridPane.rowIndex="2" GridPane.columnIndex="0"
                               style="-fx-font-size: 14px;" />
                        <TextField fx:id="phoneField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                        <Label text="Address:" GridPane.rowIndex="3" GridPane.columnIndex="0"
                               style="-fx-font-size: 14px;" />
                        <TextField fx:id="addressField" GridPane.rowIndex="3" GridPane.columnIndex="1" />
                    </GridPane>
                </VBox>

                <VBox spacing="10">
                    <Label text="Educational Qualifications"
                           style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                    <TextArea fx:id="educationArea"
                              prefRowCount="4"
                              promptText="Enter degrees, institutions, achievements..."
                              style="-fx-font-size: 14px;" />
                </VBox>

                <VBox spacing="10">
                    <Label text="Skills"
                           style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                    <TextArea fx:id="skillsArea"
                              prefRowCount="3"
                              promptText="List your skills..."
                              style="-fx-font-size: 14px;" />
                </VBox>

                <VBox spacing="10">
                    <Label text="Work Experience"
                           style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                    <TextArea fx:id="experienceArea"
                              prefRowCount="4"
                              promptText="Enter your job titles, companies, roles..."
                              style="-fx-font-size: 14px;" />
                </VBox>

                <VBox spacing="10">
                    <Label text="Projects"
                           style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                    <TextArea fx:id="projectsArea"
                              prefRowCount="3"
                              promptText="Describe relevant projects..."
                              style="-fx-font-size: 14px;" />
                </VBox>

                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Button text="Generate CV"
                            fx:id="generateButton"
                            onAction="#handleGenerateCV"
                            style="-fx-background-color: #0d6efd;
                                   -fx-text-fill: white;
                                   -fx-font-size: 16px;
                                   -fx-padding: 10 25;" />
                </HBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
